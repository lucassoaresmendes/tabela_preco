<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <GridLayout
        android:id="@+id/grid_cabecalho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Primeira Descrição -->
        <TextView
            android:id="@+id/text_view_produto_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/descricao"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Primeiro Preço -->
        <TextView
            android:id="@+id/text_view_preco_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/preco"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Segunda Descrição -->
        <TextView
            android:id="@+id/text_view_produto_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/descricao"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Segundo Preço -->
        <TextView
            android:id="@+id/text_view_preco_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/preco"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </GridLayout>

    <GridLayout
        android:id="@+id/grid_produtos"
        android:layout_width="920dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_cabecalho" />

</androidx.constraintlayout.widget.ConstraintLayout>